<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/rg_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_news_drawable_selector"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/rb_smartservice"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_smartservice_drawable_selector"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_government"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_government_drawable_selector"
            android:text="政要" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_setting_drawable_selector"
            android:text="设置" />

    </RadioGroup>

</LinearLayout>